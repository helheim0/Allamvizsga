<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="50dp"
    android:background="@color/white"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/teamImage"
            android:transitionName="img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/shadow"
            android:src="@drawable/shadow_bg"
            android:transitionName="img"
            android:layout_alignBottom="@+id/teamImage"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/teamNameLV"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:ellipsize="end"
            android:fontFamily="@font/raleway"
            android:gravity="bottom"
            android:maxLines="1"
            android:singleLine="true"
            android:text="TEAM NAME"
            android:textColor="@color/myWhite"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team_description"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="fndsajnfjkasdnfjkasdnflkagdnfjkasdnfkaldmsakldmfglkagdnfjkasdnfkaldmsakldmfglkagdnfjkasdnfkaldmsakldmfglkagdnfkaldmsakldmfglkagdamfl"
            android:fontFamily="@font/raleway"
            android:layout_below="@id/teamImage"
            android:layout_margin="@dimen/activity_horizontal_margin"/>

        <TextView
            android:id="@+id/edit_team"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/teamImage"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@+id/team_description"
            android:fontFamily="@font/raleway"
            android:maxLines="4"
            android:text="@string/edit"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="invisible" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

</FrameLayout>